<% provide(:title, 'App Dogs') %>

<h1>Listing Dogs</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Dog name</th>
      <th>Breed</th>
      <th>Variety</th>
      <th>DOB</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Pedinum</th>
      <th>Occupation</th>
      <th>Workcert</th>
      <th>Avatar</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.dname %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.variety %></td>
        <td><%= dog.dob %></td>
        <td><%= dog.height %></td>
        <td><%= dog.weight %></td>
        <td><%= dog.pedinum %></td>
        <td><%= dog.occupation %></td>
        <td><%= dog.workcert %></td>
        <td><%= dog.avatar %></td>
        <td><%= dog.user.try(:username) %></td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= will_paginate @dogs %>
</p>
<%= link_to 'New Dog', new_dog_path %> |
<%= link_to 'Admin Menu', admin_path %>
