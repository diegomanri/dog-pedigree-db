<div class="public-content">


  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-4 col-md-offset-3">
        <h1 class="text-center login-title">Sign in to continue to SDN</h1>
        <div class="account-wall">

          <%= image_tag("small_color_snd_logo.png", class: "profile-img") %>
          <%= form_tag({:action => 'attempt_login'}, :class => "form-signin") do %>
            <%= text_field_tag(:username, '', {:class => 'form-control', :placeholder => "Username", :autofocus => true}) %>
            <%= password_field_tag :password, '', {:class => 'form-control', :placeholder => "Password"} %>
            <%= submit_tag "Log In", :class => "btn btn-lg btn-primary btn-block" %>
            <label class="checkbox pull-left">
              <input type="checkbox" value="remember-me">
              Remember me
            </label>
            <%= link_to 'Forgot pass?', new_password_reset_path, :class => "pull-right forgot-pass" %><span class="clearfix">
            </span>

          <% end %>
        </div>
        <%= link_to 'Create an account', public_registration_path, :class => "text-center new-account" %>
      </div>
    </div>
  </div>


</div>


