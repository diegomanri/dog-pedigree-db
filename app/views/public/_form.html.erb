<div class="public-content">
  <div class="container">
      <div class="row">
          <div class="col-sm-6 col-md-5 col-lg-5 col-md-offset-3">
            <h1 class="text-center register-title">User Registration</h1>
            <div class="register-wall">
             <%= form_for(@user) do |f| %>
                 <%= render 'shared/error_messages', object: f.object %>

                <div class="form-horizontal">
                  <div class="form-group">
                    <%= f.label('First Name', {:class => 'col-md-4 control-label'}) %>
                    <div class="col-md-7">
                    <%= f.text_field(:ufname, {:class => 'form-control input-md', :placeholder => 'John'}) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= f.label('Middle Name', {:class => 'col-md-4 control-label'}) %>
                    <div class="col-md-7">
                      <%= f.text_field(:umname, {:class => 'form-control input-md', :placeholder => 'middle'}) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= f.label('Last Name', {:class => 'col-md-4 control-label'}) %>
                    <div class="col-md-7">
                      <%= f.text_field(:ulname, {:class => 'form-control input-md', :placeholder => 'Doe'}) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= f.label('E-mail Address', {:class => 'col-md-4 control-label'}) %>
                    <div class="col-md-7">
                      <%= f.text_field(:uemail, {:class => 'form-control input-md', :placeholder => 'myemail@example.com'}) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= f.label('Username', {:class => 'col-md-4 control-label'}) %>
                    <div class="col-md-7">
                      <%= f.text_field(:username, {:class => 'form-control input-md', :placeholder => 'Username'}) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= f.label('Password', {:class => 'col-md-4 control-label'}) %>
                    <div class="col-md-7">
                      <%= f.password_field(:password, {:class => 'form-control input-md', :placeholder => 'Password 8 characters min'}) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= f.label('Confirm Password', {:class => 'col-md-4 control-label'}) %>
                    <div class="col-md-7">
                      <%= f.password_field(:password_confirmation, {:class => 'form-control input-md', :placeholder => "Confirm Password"}) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="register-button">
                        <div class="col-md-7">
                        <%= f.submit('Register', {:class => "btn btn-lg btn-primary btn-block"}) %>
                        </div>
                    </div>
                  </div>

                </div>
            <% end %>
            </div>
        </div>
      </div>
  </div>
</div>