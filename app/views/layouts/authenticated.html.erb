<!DOCTYPE html>
<html>
    <head>
        <title>
            <%= if content_for?(:title) then yield(:title) + ' | ' end %>
            SDN
        </title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
      <%= csrf_meta_tags %>
    </head>
    <body>
        <%= render 'layouts/navigation1' %>
        <div class="row">
          <div class="flash-errors">
            <%= render 'shared/flash_error_messages' %>
          </div>
        </div>
        <div class="row" id="super-container">
            <div class="col-sm-2" id="nav-div">
                <%=render 'layouts/navigation2' %>
            </div>
            <div class="col-sm-10" id="app-content">
                <%= yield %>
            </div>
        </div>
        <%= render 'layouts/footer' %>
    </body>
</html>
