<% provide(:title, 'App Events') %>

<h1>Listing Events</h1>

<div class="tableScroll col-md-11 col-sm-11 col-lg-11">
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Event Name</th>
      <th>Date</th>
      <th>Time</th>
      <th>Description</th>
      <th>State</th>
      <th>city</th>
      <th>Zip</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.ename %></td>
        <td><%= event.edate.try(:strftime, ("%m/%d/%Y")) %></td>
        <td><%= event.etime.strftime("%H:%M ") %></td>
        <td><%= event.edescription %></td>
        <td><%= event.estateprov %></td>
        <td><%= event.ecity %></td>
        <td><%= event.ezippostal %></td>
        <td><%= event.ecountry %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<p>
  <%= will_paginate @events %>
</p>

<div class="col-md-12">
<%= link_to 'New Event', new_event_path %> |
<%= link_to 'Admin Menu', admin_path %>
</div>
