<div class="col-md-6 col-md-offset-3">
  <% flash.each do |type, msg| %>
      <%= content_tag :div, class: "alert alert-#{type} alert-dismissable text-center", style: "margin-top:70px;" do %>
          <%= msg %>
          <button type="button" class="close" data-dismiss="alert"
                  aria-hidden="true">
            &times;
          </button>
      <% end %>
  <% end %>

</div>
