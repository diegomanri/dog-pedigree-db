var bgpic = 0;

function nextBackground() {

    var backgrounds = ["<%= asset_path('medium2-doge-hannibal.jpg') %>", "<%= asset_path('dog_bone_wide.jpg') %>",
        "<%= asset_path('medium2-intro-wide.jpg') %>"];
    //var rand = Math.floor(Math.random() * backgrounds.length);
    //$(".public-content").css("background", "url(" +backgrounds[0] +")no-repeat center center");

    bgpic++;
    bgpic = bgpic % backgrounds.length;

      $(".public-content").css("background", "url(" +backgrounds[bgpic] +")no-repeat center center");
      $(".public-content").css("background-size", "cover");
      $(".public-content").css("transition", "background 1s");
      $(".public-content").css("transform", "translateZ(0)");

    //setTimeout(nextBackground, 3000);
}

$(document).ready(function() {
  setInterval(nextBackground, 15000);
});
